<h1>Update a Figure</h1>

<form action="/figures/<%=@figure.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Name:</label>

  <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">

  <br></br>

  <label> Choose an existing landmark:</label>

  <br></br>

  <%@landmarks.each do |landmark|%>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>">
    <%='checked' if @figure.landmarks.include?(landmark) %><%=landmark.name%></input>
    <%end%>

    <br></br>

    <label>and/or, create a new landmark:</label>
    <br></br>
    <label>name:</label>
      <input  type="text" name="landmark[name]" id='new_landmark'></input>
    <br></br>

    <%@titles.each do |title|%>
      <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"></input>
      <%='checked' if @figure.titles.include?(title) %><%=title.name%></input>
      <%end%>

      <br></br>

      <label>and/or, create a new title:</label>
      <br></br>
      <label>name:</label>
        <input  type="text" name="title[name]" id='new_title'></input>
      <br></br>


  <input type="submit" value="Edit Figure">


</form>
